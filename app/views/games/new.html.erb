<div class="container mt-5 ms-5">
  <h1 class="mb-5">New game</h1>
  <% @letters.each do |letter| %>
    <span id="letter" class="border p-3 text-white shadow-sm p-3 mb-5 rounded"><%= letter %></span>
  <% end %>

  <form action="score" method="post" data-turbo="false" class="row g-3 mt-3">

      <label for="inputWord">What is the longest word you can find?</label>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class="col-auto mt-4 d-flex justify-center">
      <input type="text" class="form-control" name="word">
      <input type="submit" value="Play" class="btn btn-primary">
    </div>
  </form>
